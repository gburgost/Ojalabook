<div class="page-header">
  <h1>
    <figure class="avatar-contenedor">  <%= image_tag(current_user.avatar.url(:medium), :class => 'avatar-medium') %></figure>
    <%= @user.nombre_completo %>
  </h1>
</div>

<% if @statuses %>
  <% @statuses.order("updated_at desc").each do |status| %>
  <div class="well status">
    <%= status.contenido %>
    <hr>
    Hace <%= link_to time_ago_in_words(status.updated_at), status_path(status) %>
    <span class="admin">
        | <%= link_to "Editar", edit_status_path(status) %> | 
        <%= link_to "Borrar", status, method: :delete, data: {confirm: "EstÃ¡s seguro que quieres borrar este estado?"} %>
      </span>
  </div>
  <% end %>
<% end %>