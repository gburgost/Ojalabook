<div class="page-header">
  <h1>
    <figure class="avatar-contenedor">  <%= image_tag(current_user.avatar.url(:medium), :class => 'avatar-medium') %></figure>
    <%= @user.nombre_completo %>
  </h1>
</div>

<% if @statuses %>
  <% @statuses.order("updated_at desc").each do |status| %>
  <div class="well status">
    <div class="contenido">
      <%= status.contenido %>
    </div>
    <div class="contenido-image">
      <% if status.imagen.url(:thumb) == '/imagens/thumb/missing.png' %>
        <p>No hay imagen</p>
      <% else %>
          <%= image_tag(status.imagen.url(:thumb)) %>
      <% end %>
    </div>
    <hr>
    Hace <%= link_to time_ago_in_words(status.updated_at), status_path(status) %>
    <span class="admin">
        | <%= link_to "Editar", edit_status_path(status) %> | 
        
      <% if can? :destroy, status %>
       <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
       status_path(status),
       :method => :delete,
       :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
       :class => 'btn btn-mini btn-danger' %>
      <% end %>
    </span>
  </div>

  <% end %>
<% end %>