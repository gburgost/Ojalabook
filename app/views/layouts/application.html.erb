<!DOCTYPE html>
<html>
  <head>
    <title>Ojalabook</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />

  </head>

  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Ojalabook</a>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li class="active"><%= link_to 'Status', timeline_path %></li>
          </ul>
          <!-- <form class="navbar-form navbar-left">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Search">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
          </form> -->
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <% if user_signed_in? %>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                    <figure class="avatar-contenedor avatar-user">
                      <%= image_tag(current_user.avatar.url(:thumb), :class=> 'avatar') %>
                    </figure>
                    <%= current_user.nombre_completo %> 
                    <span class="caret"></span>
                  </a>
                  <ul class="dropdown-menu">
                    <li>
                      <%= link_to 'Perfil', perfil_path(current_user.nombre_perfil) %>
                    </li>
                    <li>
                    <% if can? :show, @users %>
                       <%= link_to 'Lista de usuarios', usuarios_path %>
                      <% end %>
                    </li>
                    <li>
                      <%= link_to 'Editar usuario', edit_user_registration_path %>
                    </li>
                    <li>
                      <%= link_to "Cerrar sesión", destruir_path %>
                    </li>
                  </ul>
                </li>
              <% else %>
                <li><%= link_to "Registrar", registrar_path %></li>
                <li><%= link_to "Iniciar Sesión", comenzar_path %></li>
              <% end %>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
    <div class="container">
      <% flash.each do |key, value| %>
        <div class="alert alert-dismissable <%= bootstrap_class_for key  %> fade in">
           <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
          <%= value %>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
