<!DOCTYPE html>
<html>
  <head>
    <title>Ojalabook</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
      <a href="#" class="navbar-brand">Ojalabook</a>
      <ul class="nav navbar-nav">
        <li class="active"><%= link_to 'Status', timeline_path %></li>
      </ul>
      <ul class="nav navbar-nav pull-right">
        <% if user_signed_in? %>
          <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
          <figure class="avatar-contenedor avatar-user">
            <%= image_tag(current_user.avatar.url(:thumb), :class=> 'avatar') %>
          </figure>
          <%= current_user.nombre_completo %> 
          <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to 'Perfil', perfil_path(current_user.nombre_perfil) %></li>
            <li><%= link_to 'Ajustes', edit_user_registration_path %></li>
          </ul>
        </li>
          <li><%= link_to "Cerrar sesión", destruir_path %></li>
        <% else %>
          <li><%= link_to "Registrar", registrar_path %></li>
          <li><%= link_to "Iniciar Sesión", comenzar_path %></li>
        <% end %>
      </ul>
    </div>
  </div>

    <div class="container">


      <% flash.each do |key, value| %>
        <div class="alert alert-dismissable <%= bootstrap_class_for key  %> fade in">
           <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
          <%= value %>
        </div>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
