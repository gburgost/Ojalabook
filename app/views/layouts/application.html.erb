<!DOCTYPE html>
<html>
  <head>
    <title>Ojalabook</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
      <a href="#" class="navbar-brand">Ojalabook</a>
      <ul class="nav navbar-nav">
        <li class="active"><%= link_to 'Status', timeline_path %></li>
      </ul>
      <ul class="nav navbar-nav pull-right">
        <% if user_signed_in? %>
          <li><%= link_to current_user.nombre_completo, edit_user_registration_path %></li>
          <li><%= link_to "Cerrar sesión", destruir_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "Registrar", registrar_path %></li>
          <li><%= link_to "Iniciar Sesión", comenzar_path %></li>
        <% end %>
      </ul>
    </div>
  </div>

    <div class="container">


      <% flash.each do |key, value| %>
        <div class="alert alert-dismissable <%= bootstrap_class_for key  %> fade in">
           <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
          <%= value %>
        </div>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
